<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dialog_filter_cl_width"
        android:layout_height="@dimen/dialog_filter_cl_height"
        android:background="@mipmap/pop_frame_bg">

        <TextView
            android:id="@+id/tv_dialog_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_filter_title_tv_margin_top"
            android:text="@string/str_dialog_filter_title"
            android:textColor="@color/main_title_text_normal"
            android:textSize="@dimen/text_size_micro"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dialog_filter_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dialog_filter_content_rv_margin_left"
            android:layout_marginTop="@dimen/dialog_filter_content_rv_margin_top"
            android:layout_marginRight="@dimen/dialog_filter_content_rv_margin_left"
            android:descendantFocusability="afterDescendants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>


